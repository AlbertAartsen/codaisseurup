<div class="panel panel-primary">
  <div class="panel-heading"><%= @event.name %></div>

  <div class="panel-body">

    <p>Host: <%= @event.user %></p>
    <p>Location: <%= @event.location %></p>

    <!-- Main Info -->
    <h4>Main Info</h4>
    <p>Capacity: <%= @event.capacity %></p>
    <p>ETA: <%= @event.starts_at %></p>
    <p>ETD <%= @event.ends_at %></p>
    <p>Price <%= @event.price %></p>

    <!-- About -->
    <h4>About</h4>
    <p><%= @event.description %></p>

    <h4>Themes</h4>
    <% @themes.each do |theme| %>
      <span class="label label-success"><%= theme.name %></span>
    <% end %>
    
    <!-- Amenities -->
    <h4>Funstuffs</h4>
    <ul class="amenities">
      <li><%= !@event.includes_food ? ("<s>HASFOODS</s>").html_safe : "HASFOOD" %></li>
      <li><%= !@event.includes_drinks ? ("<del>HASDRINK</del>").html_safe : "HASDRINK" %></li>
    </ul>

  </div>

</div>

<%= link_to "Back", events_path, class: "btn btn-default" %>
